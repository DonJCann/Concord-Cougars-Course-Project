@model IEnumerable<SwimSchoolDbContext.Models.Session>
<p><a asp-action="AddSessions"> add a Session</a></p>
@{
    if (Model.Count() < 1)
    {
        <p> No Sessions in database yet.</p>
    }
    else
    {
        <h3> All Sessions</h3>
        <table border="1">
            <tr>
                <th>Session ID</th>
                <th>Day Time</th>
                <th>Skill Level</th>
                <th>Coach ID</th>
                <th>Session Capacity</th>
                <th>Start Time</th>
                <th>End Time</th>
            </tr>
            @foreach ( var session in Model)
            {
                <tr>
                    <td>@session.SessionId</td>
                    <td>@session.DateTime</td>
                    <td>@session.SkillLevel</td>
                    <td>@session.CoachId</td>
                    <td>@session.SessionCapacity</td>
                    <td>@session.StartTime</td>
                    <td>@session.EndTime</td>
                </tr>
            }
        </table>
    }
}
