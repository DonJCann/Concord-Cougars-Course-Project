@model IEnumerable<Concord_Cougars_Course_Project.Models.Lesson>
<p><a asp-action="AddLesson">Add a lesson</a></p>
@{
    if (Model.Count() < 1)
    {
        <p>No lesson in database yet.</p>
    }
    else
    {
        <h3>All Lessons</h3>
        <table>
            <tr>
                <th>Lesson ID</th>
                <th>Skill Level</th>
                <th>Tuition</th>
            </tr>
            @foreach (var lesson in Model)
            {
        <tr>
            <td>@lesson.LessonId</td>
            <td>@lesson.SkillLevel</td>
            <td>@lesson.tuition</td>
        </tr>
            }
        </table>
    }
}