@model IEnumerable<Concord_Cougars_Course_Project.Models.Lesson>
@{
    if (@ViewBag.profileExist == false)
            {
                <p>You must add your profile before you can add sessions</p>
            }
    else if (Model.Count() < 1)
    {
                <p>No Lesson in database yet.</p>
    }
    else
            {
                <h3>All Lessons</h3>
                <table border="1">
                    <tr>
                        <th>Lesson ID</th>
                        <th>Skill Level</th>
                        <th>Add Session</th>
                    </tr>
                    @foreach (var lesson in Model)
                {
                    <tr>
                        <td>@lesson.LessonId</td>
                        <td>@lesson.SkillLevel</td>
                        <td>
                            @{
                                <a asp-controller="Session"
                                   asp-action="AddSession"
                                   asp-route-id="@lesson.LessonId">
                                    Add Session
                                </a>
                            }
                        </td>
                    </tr>
                }
                </table>
            }
}
<p><a asp-action="Index">Back to Coach Home</a></p>